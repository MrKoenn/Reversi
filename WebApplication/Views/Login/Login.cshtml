@model WebApplication.Models.RegisterFormModel

@{
	ViewData["Title"] = "Login";

	var error = ViewData["Error"];
}

<h2>Log in</h2>
<hr/>
<div class="row">
	<div class="col-md-4">
		@using (Html.BeginForm())
		{
			@Html.ValidationSummary()
			<p>Username: @Html.TextBoxFor(u => u.Username)</p>
			<p>Password: @Html.PasswordFor(u => u.Password)</p>
			<input type="submit" value="Log in"/>
			if (error != null)
			{
				<span id="error">@error</span>
			}
		}
	</div>
	<a href="@Url.Action("Register", "Login")">Don't have an account? Register here!</a>
</div>